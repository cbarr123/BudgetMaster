@model BudgetMaster.Models.ViewModels.ActualExpenseCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Actual Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="ActualExpense.ExpenseCategoryId" class="control-label"></label>
                <select required asp-for="ActualExpense.ExpenseCategoryId" class="form-control" asp-items="@Model.ExpenseCategoryOptions"></select>
                <span asp-validation-for="ActualExpense.ExpenseCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualExpense.Amount" class="control-label"></label>
                <input asp-for="ActualExpense.Amount" class="form-control" />
                <span asp-validation-for="ActualExpense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
